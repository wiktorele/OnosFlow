@model OnosFlow.Models.Flow

@{
    ViewData["Title"] = "Create";
}

<h1>Stwórz przepływ</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <h2 class="mb-4">Ogólne</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="priority" class="control-label"></label>
                <input asp-for="priority" class="form-control" />
                <span asp-validation-for="priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="timeout" class="control-label"></label>
                <input asp-for="timeout" class="form-control" />
                <span asp-validation-for="timeout" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isPermanent" /> @Html.DisplayNameFor(model => model.isPermanent)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="deviceId" class="control-label"></label>
                <input asp-for="deviceId" class="form-control" />
                <span asp-validation-for="deviceId" class="text-danger"></span>
            </div>
            <h2 class="mb-4">Instrukcje</h2>
            <div class="form-group">
                <label asp-for="treatment.instructions[0].type" class="control-label"></label>
                <select asp-for="treatment.instructions[0].type" class="form-control"/>
                    <option>OUTPUT</option>
                    <option>L2MODIFICATION</option>
                    <option>L3MODIFICATION</option>
                    <option>L4MODIFICATION</option>
                </select>
            <span asp-validation-for="treatment.instructions[0].type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="treatment.instructions[0].port" class="control-label"></label>
                <input asp-for="treatment.instructions[0].port" class="form-control" />
                <span asp-validation-for="treatment.instructions[0].port" class="text-danger"></span>
            </div>
            <h2 class="mb-4">Kryteria</h2>
            <div id="criteria">
                @if ((Model.selector != null) && (Model.selector.criteria != null))
                {
                }
            </div>
            <div class="form-group">
                <button id="addCriterion" type="button" class="btn btn-primary">Dodaj</button>
            </div>
            <div class="form-group">
                <input type="submit" value="Stwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do tabeli</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{await Html.RenderPartialAsync("_CollectionFormScripts");}
}
