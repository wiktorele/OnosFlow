@model OnosFlow.Models.FlowModel
@{
    ViewData["Title"] = "Flows";
} 

<h1>Tablica przepływów</h1>

<p>
    <a asp-action="Create">Stwórz nowy</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.flows[0].id)</th>
            <th>@Html.DisplayNameFor(model => model.flows[0].priority)</th>
            <th>@Html.DisplayNameFor(model => model.flows[0].timeout)</th>
            <th>@Html.DisplayNameFor(model => model.flows[0].deviceId)</th>
            <th>@Html.DisplayNameFor(model => model.flows[0].state)</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.flows) {
        <tr>
            <td>
                @item.id
            </td>
            <td>
                @item.priority
            </td>
            <td>
                @item.timeout
            </td>
            <td>
                @item.deviceId
            </td>
            <td>
                @item.state
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { deviceId=item.deviceId}) |*@
                @Html.ActionLink("Szczegóły", "Details", new { deviceId=item.deviceId, flowId=item.id }) |
                @Html.ActionLink("Usuń", "Delete", new { deviceId=item.deviceId, flowId=item.id })
            </td>
        </tr>
}
    </tbody>
</table>
