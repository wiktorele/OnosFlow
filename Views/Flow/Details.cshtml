@model OnosFlow.Models.Flow

@{
    ViewData["Title"] = "Details";
}

<h1>Flow Details</h1>
<hr />
<div class="row">
    <div class="col-sm-4">
        <h2 class="mb-4">General</h2>
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.id)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.id)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.tableId)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.tableId)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.appId)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.appId)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.priority)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.priority)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.timeout)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.timeout)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.isPermanent)
            </dt>
            <dd class="col-sm-2">
                @Html.DisplayFor(model => model.isPermanent)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.deviceId)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.deviceId)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.state)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.state)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.life)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.life)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.bytes)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.bytes)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.liveType)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.liveType)
            </dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.lastSeen)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.lastSeen)
            </dd>
        </dl>
        <hr />
    </div>
    <div class="col-sm-4">
        <h2 class="mb-4">Instructions</h2>
        @foreach (var item in Model.treatment.instructions)
        {
            <dl class="row">
                <dt class="col-sm-4">
                    Type
                </dt>
                <dd class="col-sm-6">
                    @item.type
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-4">
                    Port
                </dt>
                <dd class="col-sm-6">
                    @item.port
                </dd>
            </dl>
        }
        <hr />
    </div>
    <div class="col-sm-4">
        <h2 class="mb-4">Criteria</h2>
        @foreach (var item in Model.selector.criteria)
        {
            <dl class="row">
                <dt class="col-sm-4">
                    EthType
                </dt>
                <dd class="col-sm-6">
                    @item.ethType
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-4">
                    Type
                </dt>
                <dd class="col-sm-6">
                    @item.type
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-4">
                    Mac
                </dt>
                <dd class="col-sm-6">
                    @item.mac
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-4">
                    Port
                </dt>
                <dd class="col-sm-6">
                    @item.port
                </dd>
            </dl>
        }
        <hr />
    </div>
</div>
<div>
